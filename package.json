{
  "name": "crypto-wallet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setup:typescript && npm run setup:ts-node && npm run setup:tests && npm i",
    "setup:typescript": "npm install typescript --save-dev && tsc --init && npm install --save-dev @types/node",
    "setup:ts-node": "npm i ts-node-dev --save-dev",
    "setup:tests": "npm install --save-dev @types/jest @babel/preset-typescript babel-jest @babel/core @babel/preset-env",
    "install": "npm install tiny-secp256k1 bip39 bip32 bitcoinjs-lib --save",
    "watch:dev": "npx tsc *.ts --watch --outDir ./dist",
    "watch": "npx tsc --watch --pretty",
    "build": "npm tsc",
    "run:javascript": "watch node index.js",
    "dev": "npx ts-node-dev index.ts",
    "test": "npx jest --verbose",
    "test:hd-wallet:ts": "npx jest --verbose hd-wallet.test.ts",
    "test:hd-wallet": "npx jest --watch --verbose dist/hd-wallet.test.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@types/typescript": "^2.0.0",
    "babel-jest": "^28.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/web3": "^1.2.2",
    "axios": "^0.27.2",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^6.0.1",
    "bs58": "^5.0.0",
    "ecpair": "^2.0.1",
    "js-sha3": "^0.8.0",
    "tiny-secp256k1": "^2.2.1",
    "web3": "^1.7.3"
  }
}
