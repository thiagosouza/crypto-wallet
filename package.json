{
  "name": "crypto-wallet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setup:typescript && npm run setup:ts-node && npm run setup:tests && npm i",
    "setup:typescript": "npm install typescript --save-dev && tsc --init && npm install --save-dev @types/node",
    "setup:ts-node": "npm i ts-node-dev --save-dev",
    "setup:tests": "npm install --save-dev jest @types/jest @babel/preset-typescript babel-jest @babel/core @babel/preset-env",
    "upgrade:all": "npx npm-upgrade",
    "upgrade:check:list:install": "npm i -g npm-check-updates && ncu -u && npm install",
    "install": "npm install @types/node tiny-secp256k1 bip39 bip32 bitcoinjs-lib --save",
    "watch:dev": "npx tsc *.ts --watch --outDir ./dist",
    "watch": "npx tsc --watch --pretty",
    "build": "npx tsc",
    "run:javascript": "watch node index.js",
    "dev": "npx ts-node-dev index.ts",
    "test": "npx jest --verbose",
    "test:hd-wallet:ts": "npx jest --watch --verbose hd-wallet.test.ts",
    "test:hd-wallet": "npx jest --watch --verbose dist/hd-wallet.test.js",
    "test:service:sochain": "npx jest --watch --verbose dist/service.sochain.test.js --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^18.19.6",
    "@types/typescript": "^2.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "pusher": "^5.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@solana/web3.js": "^1.90.0",
    "@types/web3": "^1.2.2",
    "@types/ws": "^8.5.10",
    "axios": "^1.2.2",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bs58": "^5.0.0",
    "ecpair": "^2.1.0",
    "got": "^12.5.3",
    "js-sha3": "^0.8.0",
    "tiny-secp256k1": "^2.2.3",
    "web3": "^4.2.0",
    "web3-eth-accounts": "^4.1.0",
    "web3-types": "^1.3.1"
  }
}
